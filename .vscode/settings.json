{
    "files.exclude": {
        "**/*.ignore_*": true,
        "**/.ignore_*": true,
        "**/_ignore_*": true,
        "**/.editorconfig": true,
        "**/.eslintignore": true,
        "**/.eslintrc*": true,
        "**/.gitignore": true,
        "**/.gitattributes": true,
        "**/.husky": true,
        "**/.lintstagedrc*": true,
        "**/.nvmrc": true,
        "**/.pid": true,
        "**/.prettierignore": true,
        "**/.prettierrc*": true,
        "**/.vscode": true,
        "**/coverage": true,
        "**/dist": true,
        "**/jest.config.js": true,
        "**/node_modules": true,
        "**/package-lock.json": true,
        "LICENSE": true,
        "README.md": true
    },
    "files.watcherExclude": {
        "**/.ignore_*": true,
        "**/_ignore_*": true,
        "**/*.ignore_*": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/coverage": true,
        "**/node_modules/*/**": true
    },
    "search.exclude": {
        "**/_ignore_*": true,
        "**/.ignore_*": true,
        "**/*.code-search": true,
        "**/*.ignore_*": true,
        "**/coverage": true,
        "**/node_modules": true,
        "/dist": true
    },
    "editor.tabSize": 4,
    "editor.formatOnSave": false,
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.sideBar.location": "right",
    "editor.guides.bracketPairs": true,
    "editor.bracketPairColorization.enabled": true,
    "errorLens.enabled": true,
    "errorLens.borderRadius": "3px",
    "errorLens.delay": 1000,
    "errorLens.fontWeight": "200",
    "errorLens.enabledDiagnosticLevels": ["error", "warning"],
    "editor.stickyScroll.enabled": true
}
