{
    "name": "create-nodejs",
    "version": "0.0.0",
    "description": "Yet another create nodejs project boilerplate",
    "author": "github.com/daaxar",
    "private": true,
    "engines": {
        "node": ">=18 <19",
        "npm": ">=8.0"
    },
    "workspaces": [
        "api/*",
        "apps/*",
        "libs/*",
        "services/*",
        "packages/*",
        "tools/*"
    ],
    "scripts": {
        "prepare": "husky install",
        "start": "npm run start --workspaces --if-present",
        "prebuild": "npm run prebuild --workspaces --if-present",
        "build": "npm run build --workspaces --if-present",
        "build:watch": "nodemon -e js,jsx,json,ts,tsx,mjs,mts -w '**/**/src/' -w '**/**/package.json' -x 'npm run build'",
        "test": "jest --detectOpenHandles --coverage",
        "test:clean": "npm run test:clean --workspaces --if-present",
        "test:watch": "npm run test:watch --workspaces --if-present",
        "lint": "npm run lint --workspaces --if-present",
        "lint:fix": "npm run lint:fix --workspaces --if-present",
        "clean": "npm run test:clean && npm run clean --workspaces --if-present",
        "clean:all": "npm run clean:all --workspaces --if-present"
    },
    "dependencies": {
        "@daaxar/time": "file:./libs/time",
        "@daaxar/package-js": "file:./packages/package-js",
        "@daaxar/package-ts": "file:./packages/package-ts",
        "dotenv": "^16.0.2"
    },
    "devDependencies": {
        "esbuild": "^0.14.54",
        "esbuild-jest": "^0.5.0",
        "eslint": "^8.25.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^27.1.3",
        "husky": "^8.0.1",
        "jest": "^28.1.3",
        "lint-staged": "^13.0.3",
        "minimatch": "^5.1.0",
        "nodemon": "^2.0.19",
        "prettier": "^2.7.1",
        "rimraf": "^3.0.2"
    },
    "keywords": [
        "monorepo",
        "javascript",
        "typescript"
    ],
    "license": "MIT"
}
